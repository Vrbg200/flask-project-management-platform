        { id: '2', titulo: 'Capacitaci√≥n Distribuidora', clienteNombre: 'Distribuidora Central', clienteId: '2', valor: 8500, etapa: 'CALIFICADO', probabilidad: 60, fechaCierre: '2025-11-30' },
        { id: '3', titulo: 'ERP Servicios M√©dicos', clienteNombre: 'Servicios M√©dicos', clienteId: '3', valor: 75000, etapa: 'PROSPECTO', probabilidad: 30, fechaCierre: '2026-02-28' },
        { id: '4', titulo: 'Consultor√≠a Constructora', clienteNombre: 'Constructora Moderna', clienteId: '4', valor: 15000, etapa: 'CIERRE', probabilidad: 90, fechaCierre: '2025-11-20' },
      ]);

      setVentas([
