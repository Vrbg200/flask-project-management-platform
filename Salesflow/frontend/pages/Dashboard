import React, { useState, useEffect } from 'react';
import { 
  TrendingUp, Users, DollarSign, ShoppingCart, Activity, Target, Calendar,
  BarChart3, PieChart, ArrowUpRight, ArrowDownRight, Plus, Search, Edit,
  Trash2, Eye, Phone, Mail, MapPin, Building2, Package, CreditCard,
  CheckCircle, XCircle, Clock, Filter, Download, RefreshCw, LogOut, X, Save
} from 'lucide-react';
import { LineChart, Line, BarChart, Bar, PieChart as RePieChart, Pie, Cell, XAxis, YAxis, CartesianGrid, Tooltip, Legend, ResponsiveContainer } from 'recharts';

// ==================== TYPES ====================
interface Usuario {
  id: string;
  nombre: string;
  apellido: string;
  email: string;
  rol: 'ADMIN' | 'GERENTE' | 'VENDEDOR';
}

interface Cliente {
  id: string;
  nombre: string;
  email: string;
  telefono: string;
  direccion: string;
  tipo: string;
  industria: string;
  estado: string;
}

interface Producto {
  id: string;
  codigo: string;
  nombre: string;
  categoria: string;
  precio: number;
  stock: number;
  activo: boolean;
}

interface Oportunidad {
  id: string;
  titulo: string;
  clienteNombre: string;
  clienteId: string;
  valor: number;
  etapa: string;
  probabilidad: number;
  fechaCierre: string;
}

interface Venta {
  id: string;
  numeroVenta: string;
  clienteNombre: string;
  clienteId: string;
  total: number;
  estado: string;
  fechaVenta: string;
}

interface Actividad {
  id: string;
  tipo: string;
  titulo: string;
  descripcion?: string;
  cliente: string;
  clienteId: string;
  fecha: string;
  completada: boolean;
  prioridad: string;
}

// ==================== MAIN APP ====================
export default function SalesFlowApp() {
  const [activeView, setActiveView] = useState('dashboard');
