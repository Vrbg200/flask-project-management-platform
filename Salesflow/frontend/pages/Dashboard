              {activeView === 'productos' && 'Gesti√≥n de Productos'}
              {activeView === 'ventas' && 'Registro de Ventas'}
              {activeView === 'actividades' && 'Actividades y Tareas'}
              {activeView === 'reportes' && 'Reportes y An√°lisis'}
