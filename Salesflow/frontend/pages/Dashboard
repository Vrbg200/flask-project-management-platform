        { id: '4', codigo: 'ERP-001', nombre: 'Sistema ERP Integrado', categoria: 'SOFTWARE', precio: 15000, stock: 20, activo: true },
        { id: '5', codigo: 'SUPP-001', nombre: 'Soporte T√©cnico Premium', categoria: 'SERVICIOS', precio: 800, stock: 999, activo: true },
      ]);

      setOportunidades([
